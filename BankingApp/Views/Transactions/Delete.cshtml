@model ApplicationLogic.DataModel.Transaction

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BankingApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color: #CCDDF6; overflow-x: hidden;">
    <div class="container-main">
        <h1>Delete</h1>
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <div style="background-color: rgb(255,255,255,0.5);">
                <div style="margin: 40px;">
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.SenderIBAN)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.SenderIBAN)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.RecipentIBAN)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RecipentIBAN)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Amount)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Amount)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TransactionTime)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TransactionTime)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="TransactionID" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index">Back to List</a>
                    </form>
                    <br />
                </div>
                <div style="position: absolute; bottom: 65px; z-index: -1;">
                    <img src="~/img/transaction/transaction_translucent_advanced.png" width="1110">
                </div>
            </div>
        </div>
    </div>
</body>
</html>