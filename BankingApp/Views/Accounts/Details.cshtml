@model ApplicationLogic.DataModel.Account

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BankingApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color: #CCDDF6; overflow-x: hidden;">
    <div class="container-main">
        <h1>Details</h1>
        <div>
            <h4>Account</h4>
            <div style="background-color: rgb(255,255,255,0.5);">
                <div style="margin: 40px;">
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.IBAN)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IBAN)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Balance)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Balance)
                        </dd>
                    </dl>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.AccountID">Edit</a> |
                        <a asp-action="Index">Back to List</a>
                </div>
                <br />
                </div>
            </div>
            <div style="position: absolute; bottom: 65px; z-index: -1;">
                <img src="~/img/account/account_translucent_advanced.png" width="1110">
            </div>
        </div>
    </div>
</body>
</html>
