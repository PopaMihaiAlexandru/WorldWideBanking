@model ApplicationLogic.DataModel.Card

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BankingApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color: #CCDDF6; overflow-x: hidden;">
    <div class="container-main">
        <h1>Details</h1>
        <div>
            <h4>Card</h4>
            <div style="background-color: rgb(255,255,255,0.5);">
                <div style="margin: 40px;">
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OwnerName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.OwnerName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.SerialNumber)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.SerialNumber)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ExpiryDate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ExpiryDate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CVV)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CVV)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Type)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Type)
                        </dd>
                    </dl>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.CardID">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
                <br />
                </div>
            </div>
        <div style="position: absolute; bottom: 65px; z-index: -1;">
            <img src="~/img/card/card_translucent_advanced.png" width="1110">
        </div>
    </div>
</body>
</html>
